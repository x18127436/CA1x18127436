        <% content_for :header do %>
<section class="hero is-info"> 
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <img src="/uploads/game/image/CoverGames.png" width=200 height=100> <b>GameStore: </b> PlayStation - XBox - Wii - Nintendo Switch - PC
      </h1>
    </div>
  </div>
</section>
<% end %>
<div class="game-index-grid pt4">
  <% @games.each do |game| %>

    <div class="game border-white">
      <div class="game-thumb">
      <%= link_to image_tag(game.image_url(:thumb)), game %>
      <% if game.release_year? %>
        <div class="release_year">
          <span class="tag is-info"><%= game.release_year %></span> 
        </div>
      <% end %>
      </div>


    <div class="pa3">

      <h3 class="fw7 f4 title"><%= link_to game.title, game %></h3>
      <p class="f3 fw6 has-text-left pt2 price"><%= number_to_currency(game.price) %></p>
      <p class="has-text-gray fg pt1 soldby"><b>Game sold by: </b><%= game.user.name %></p>

      <% if game_author(game) %>
         <%= link_to 'Edit', edit_game_path(game), class: "button is-small" %>
         <%= link_to 'Delete', game, method: :delete, data: { confirm: "Are you sure ?" }, class: "button is-small" %>
      <% end %>

    </div>
  </div>
  <% end %>
</div>
